<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <servlet>
    <servlet-name>TimeServlet</servlet-name>
    <servlet-class>com.example.TimeServlet</servlet-class>
    <init-param>
      <param-name>templateName</param-name>
      <param-value>time-template</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>TimeServlet</servlet-name>
    <url-pattern>/time</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>TimezoneValidateFilter</filter-name>
    <filter-class>com.example.TimezoneValidateFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>TimezoneValidateFilter</filter-name>
    <url-pattern>/time</url-pattern>
  </filter-mapping>

</web-app>
